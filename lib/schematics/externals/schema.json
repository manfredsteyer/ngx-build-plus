{
    "$schema": "http://json-schema.org/schema",
    "$id": "Externals",
    "title": "Menu Schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "$default": {
          "$source": "argv",
          "index": 0
        }
      },
      "path": {
        "type": "string",
        "format": "path",
        "description": "The path to create the component.",
        "visible": false
      },
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      },      
      "module":  {
        "type": "string",
        "description": "The declaring module.",
        "alias": "m"
      },      
      "host":  {
        "type": "boolean",
        "description": "Is the current project a host which shares dependencies with other clients?",
        "alias": "h",
        "default": false
      }

    }
  }
  